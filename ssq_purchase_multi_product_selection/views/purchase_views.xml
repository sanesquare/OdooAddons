<odoo>
    <data>

        <record model="ir.ui.view" id="purchase_order_form_inherit">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button type="object" name="select_products" string="Select Products" class="oe_highlight" attrs="{'invisible': [('state', 'not in', ['draft'])]}"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="select_product_form">
            <field name="name">select.product.wizard.form</field>
            <field name="model">select.product.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <field name="purchase_id" invisible="1"/>
                    <field name="product_ids" domain="[('purchase_ok','=',True)]" nolabel="1">
                        <tree>
                            <field name="default_code"/>
                            <field name="name"/>
                            <field name="product_template_variant_value_ids" widget="many2many_tags"/>
                        </tree>
                    </field>
                    <footer>
                        <button type="object" name="select_products" string="Select" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
