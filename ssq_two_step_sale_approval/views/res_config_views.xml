<odoo>
    <data>

        <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.sale</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="100"/>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='sale_ebay']" position="before">
                    <h2>Two Step Sale Approval</h2>
                    <div class="row mt16 o_settings_container" id="sale_approval_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="is_two_step_sale_approval">
                            <div class="o_setting_left_pane">
                                <field name="is_two_step_sale_approval"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Two Step Sale Approval" for="is_two_step_sale_approval"/>
                            </div>
                        </div><br/>
                        <div class="col-12 col-lg-6 o_setting_box" id="first_level_approve" attrs="{'invisible': [('is_two_step_sale_approval', '=', False)]}">
                            <div class="row">
                                <label for="first_level_user_ids" class="col-sm-3 o_light_label"/>
                                <field name="first_level_user_ids" widget="many2many_tags"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="second_level_approve" attrs="{'invisible': [('is_two_step_sale_approval', '=', False)]}">
                            <div class="row">
                                <label for="second_level_user_ids" class="col-sm-3 o_light_label"/>
                                <field name="second_level_user_ids" widget="many2many_tags"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
