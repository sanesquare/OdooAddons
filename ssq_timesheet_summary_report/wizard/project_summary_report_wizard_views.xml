<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="project_summary_report_wizard_view" model="ir.ui.view">
            <field name="name">wizard.project.summary.report.form</field>
            <field name="model">wizard.project.summary.report</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="project_ids" widget="many2many_tags" options="{'no_create': True, 'no_quick_create': True}"/>
                        </group>
                        <group>
                            <field name="employee_ids" widget="many2many_tags" options="{'no_create': True, 'no_quick_create': True}"/>
                        </group>
                    </group>
                    <footer>
                        <button type="object" name="print" string="Print" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_project_summary_report" model="ir.actions.act_window">
            <field name="name">Project Summary Report</field>
            <field name="res_model">wizard.project.summary.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_project_summary_report"
                  name="Project Summary Report"
                  parent="project.menu_project_report"
                  action="action_project_summary_report"
                  sequence="2"
                  />

    </data>

</odoo>
