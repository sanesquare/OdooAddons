<odoo>
    <data>

        <record model="ir.ui.view" id="view_sale_order_form_inherit">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button type="object"
                            name="create_purchase"
                            string="Create Purchase Order"
                            class="oe_highlight"
                            attrs="{'invisible':['|',('state','not in',['sent','sale','done']),('purchase_id','!=',False)]}"
                            groups="ssq_create_purchase_from_sale.group_create_purchase_from_sale"
                            />
                </xpath>
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="purchase_id" readonly="1" attrs="{'invisible':[('purchase_id','=',False)]}"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_purchase_order_form_inherit">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="sale_id" readonly="1" attrs="{'invisible':[('sale_id','=',False)]}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
