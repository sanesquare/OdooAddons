<odoo>
    <data>

        <record model="ir.ui.view" id="wizard_create_purchase_order">
            <field name="name">wizard.create.purchase.form</field>
            <field name="model">wizard.create.purchase</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="partner_id" widget="res_partner_many2one" context="{'res_partner_search_mode': 'supplier', 'show_vat': True}" placeholder="Name, TIN, Email, or Reference"/>
                            <field name="sale_id" invisible="1"/>
                        </group>
                    </group>
                    <br/><br/>
                    <field name="product_quantity_line_ids">
                        <tree editable="bottom" create="0" delete="0">
                            <field name="product_id" readonly="1" force_save="1"/>
                            <field name="name"/>
                            <field name="qty"/>
                            <field name="max_qty" invisible="1"/>
                        </tree>
                    </field>
                    <footer>
                        <button type="object" name="create_purchase_order" string="Create Purchase Order" class="btn btn-primary" data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z" />
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
